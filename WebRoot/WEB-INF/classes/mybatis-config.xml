<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">  

<configuration>
 <!-- 全局setting配置，根据需要添加 -->
	<!-- 实体类,简称 -设置别名 -->
	<typeAliases>  
 		<!-- 批量别名定义，指向包名，mybatis自动扫描包中的po类，自动定义别名，别名就是类名（首字母大/小写都可以） -->
 		<package name="com.vcourse.po"/>
 	</typeAliases> 
 <!-- 配置mapper,由于spring和mybatis的整合包进行mapper扫描，这里不需要配置了 规则:mapper.xmp和mapper.java文件同名并在同一目录 -->
</configuration>